<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_supervisorio_ciclos_form_termo" model="ir.ui.view">
        <field name="name">afr.supervisorio.ciclos.form.termo</field>
        <field name="model">afr.supervisorio.ciclos</field>
        <field name="arch" type="xml">
            <form >
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="aguardando,em_andamento,concluido,cancelado,erro,abortado,pausado"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Número da Carga" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="equipment_id" required="1"/>
                            <field name="cycle_type_id" 
                                   domain="[('is_termodesifectora', '=', True)]" 
                                   required="1"/>
                            <field name="operator_id"/>
                            <field name="company_id"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="duration" widget="float_time"/>
                        </group>
                        <group>
                            <field name="batch_number"/>
                            <field name="notes"/>
                        </group>
                    </group>
                
                    <notebook>
                        <page string="Parâmetros do Ciclo">
                            <group>
                                <field name="termo_temperature" string="Temperatura Desinfecção (°C)" required="1"/>
                                <field name="termo_phases" string="Número de Fases"/>
                                <field name="termo_drying_time" string="Tempo de Secagem (min)" widget="float_time"/>
                            </group>
                        </page>
                    </notebook>
             
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
</odoo>